<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title></title>
    </head>
    <body>
        <div class="container">
            
            <% if(action == 'add') { %>
                <div>
                    <div class="card-header">Cadastrar</div>
                    <div class="card-body">
                        <form method="POST" action="/sample_data/add_sample_data">
                            <div class="row">
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Nome</label>
                                        <input type="text" name="nome" id="nome" class="form-control" placeholder="Nome"/>
                                    </div>
                                </div>

                                <div class="col-md-6"></div>
                                    <div class="mb-3">
                                        <label>Data de Nascimento</label>
                                        <input type="date" class="form-control" id="dataNas" name="dataNas" placeholder="data de nascimento"/>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Foto</label>
                                        <input type="file" name="foto" id="foto" class="btn btn-primary" multiple/>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="endereco">Endereço</label>
                                        <input type="text" class="form-control" id="endereco" name="endereco" placeholder="endereço"/>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="sexo">Sexo</label>
                                        <select name="sexo" class="form-control">
                                            <option value="M">Masculino</option>
                                            <option value="F">Feminino</option>
                                        </select>

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" name="passwor" placeholder="Password"/>
                                    </div>
                                </div>

                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Add"/>
                            </div>
                        </form>
                    </div>
                </div>

            <% } else if(action == 'edit') { %>
                <div class="card">
                    <div class="card-header">Atualizar ussuario</div>
                    <div class="card-body">
                        <form method="POST" action="/sample_data/edit/<%= sampleData.id %>">
                            <div class="row">
                                
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Nome</label>
                                        <input type="text" name="nome" id="nome" class="form-control" placeholder="Nome" value="<%= sampleData.nome %>"/>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Foto</label>
                                        <input type="file" name="foto" id="foto" class="btn btn-primary" value="<%= sampleData.foto %>" multiple/>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="endereco">Endereço</label>
                                        <input type="text" class="form-control" id="endereco" name="endereco" placeholder="endereço" value="<%= sampleData.endereco %>"/>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" name="passwor" placeholder="Password" value="<%= sampleData.passwor %>"/>
                                    </div>
                                </div>

                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Add"/>
                            </div>
                        </form>
                    </div>
                </div>
            <% } else { %>
                
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">Dados de Ussusarios</div>
                        <div class="col">
                            <a href="/sample_data/add" class="btn btn-success btn-sm float-end">
                                Create                                
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Data de Nascimento</th>
                                <th>Foto</th>
                                <th>Endereço</th>
                                <th>Sexo</th>
                                <th>Password</th>
                                <th>CRUD</th>
                            </tr>
                            <%
                            if(sampleData.length > 0)
                            {
                                sampleData.forEach(function(data){
                            %>
                            <tr>
                                <td><%= data.id %></td>
                                <td><%= data.nome %></td>
                                <td><%= data.dataNas %></td>
                                <td><%= data.foto %></td>
                                <td><%= data.endereco %></td>
                                <td><%= data.sexo %></td>
                                <td><%= data.passwor %></td>
                                <td>
                                    <a href="/sample_data/edit/<%= data.id %>" class="btn btn-primary btn-sm">Update</a>
                                    <a href="/sample_data/delete/<%= data.id %>" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                </div>
            </div>

            <% } %>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>